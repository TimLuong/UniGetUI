{
  "$schema": "./appsettings.schema.json",
  "AppSettings": {
    "ApplicationName": "UniGetUI",
    "Version": "3.3.6",
    "DataDirectory": "%LocalAppData%\\UniGetUI",
    "EnableTelemetry": true,
    "Culture": "en-US"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning"
    },
    "File": {
      "Enabled": true,
      "Path": "%LocalAppData%\\UniGetUI\\Logs",
      "RetentionDays": 30,
      "MaxFileSizeMB": 10,
      "RollingInterval": "Day"
    },
    "Console": {
      "Enabled": false,
      "IncludeScopes": false
    }
  },
  "Features": {
    "EnableAutoUpdates": true,
    "EnableBackgroundOperations": true,
    "EnablePackageBackup": true,
    "EnableStatistics": true,
    "ExperimentalFeatures": false
  },
  "PackageManagers": {
    "WinGet": {
      "Enabled": true,
      "Priority": 1,
      "CacheDurationMinutes": 30,
      "MaxRetries": 3,
      "TimeoutSeconds": 60
    },
    "Chocolatey": {
      "Enabled": true,
      "Priority": 2,
      "CacheDurationMinutes": 30,
      "MaxRetries": 3,
      "TimeoutSeconds": 60
    },
    "Scoop": {
      "Enabled": true,
      "Priority": 3,
      "CacheDurationMinutes": 30,
      "MaxRetries": 3,
      "TimeoutSeconds": 60
    },
    "Pip": {
      "Enabled": true,
      "Priority": 4,
      "CacheDurationMinutes": 30,
      "MaxRetries": 3,
      "TimeoutSeconds": 60
    },
    "Npm": {
      "Enabled": true,
      "Priority": 5,
      "CacheDurationMinutes": 30,
      "MaxRetries": 3,
      "TimeoutSeconds": 60
    },
    "DotNetTool": {
      "Enabled": true,
      "Priority": 6,
      "CacheDurationMinutes": 30,
      "MaxRetries": 3,
      "TimeoutSeconds": 60
    },
    "PowerShell": {
      "Enabled": true,
      "Priority": 7,
      "CacheDurationMinutes": 30,
      "MaxRetries": 3,
      "TimeoutSeconds": 60
    },
    "Cargo": {
      "Enabled": true,
      "Priority": 8,
      "CacheDurationMinutes": 30,
      "MaxRetries": 3,
      "TimeoutSeconds": 60
    },
    "Vcpkg": {
      "Enabled": true,
      "Priority": 9,
      "CacheDurationMinutes": 30,
      "MaxRetries": 3,
      "TimeoutSeconds": 60
    }
  },
  "Security": {
    "AllowCLIArguments": false,
    "AllowImportingCLIArguments": false,
    "AllowPrePostOpCommand": false,
    "RequireElevation": false,
    "VerifyPackageSignatures": true,
    "EnableSandboxMode": false
  },
  "Performance": {
    "MaxConcurrentOperations": 3,
    "NetworkTimeoutSeconds": 30,
    "CacheEnabled": true,
    "MaxCacheSizeMB": 500,
    "EnableCompression": true,
    "PreloadPackageLists": true
  },
  "UI": {
    "Theme": "System",
    "Language": "en-US",
    "ShowNotifications": true,
    "MinimizeToTray": false,
    "StartMinimized": false,
    "CheckForUpdatesOnStartup": true,
    "ShowPackageIcons": true,
    "AnimationsEnabled": true
  },
  "Network": {
    "ProxyEnabled": false,
    "ProxyAddress": "",
    "ProxyPort": 0,
    "ProxyUsername": "",
    "UseSystemProxy": true,
    "EnableIPv6": true,
    "MaxDownloadSpeedMBps": 0,
    "ParallelDownloads": 3
  },
  "Backup": {
    "Enabled": true,
    "AutoBackup": true,
    "BackupInterval": "Daily",
    "RetentionDays": 30,
    "BackupLocation": "%LocalAppData%\\UniGetUI\\Backups",
    "IncludeSettings": true
  },
  "Telemetry": {
    "Enabled": true,
    "CollectUsageData": true,
    "CollectErrorReports": true,
    "CollectPerformanceData": false,
    "AnonymizeData": true,
    "TelemetryEndpoint": "https://telemetry.unigetui.com/api/v1/events"
  }
}
