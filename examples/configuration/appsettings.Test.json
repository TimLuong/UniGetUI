{
  "$schema": "./appsettings.schema.json",
  "AppSettings": {
    "DataDirectory": "%LocalAppData%\\UniGetUI\\Test",
    "EnableTelemetry": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Console": {
      "Enabled": false
    },
    "File": {
      "Path": "%LocalAppData%\\UniGetUI\\Test\\Logs",
      "RetentionDays": 7,
      "MaxFileSizeMB": 5
    }
  },
  "Features": {
    "ExperimentalFeatures": false,
    "EnableAutoUpdates": false,
    "EnableBackgroundOperations": true
  },
  "PackageManagers": {
    "WinGet": {
      "CacheDurationMinutes": 10,
      "TimeoutSeconds": 30
    },
    "Chocolatey": {
      "CacheDurationMinutes": 10,
      "TimeoutSeconds": 30
    }
  },
  "Performance": {
    "MaxConcurrentOperations": 2,
    "NetworkTimeoutSeconds": 10,
    "CacheEnabled": true,
    "MaxCacheSizeMB": 100
  },
  "Security": {
    "AllowCLIArguments": false,
    "VerifyPackageSignatures": false
  },
  "Testing": {
    "MockExternalServices": true,
    "UseTestData": true,
    "EnableTestHelpers": true,
    "SimulateErrors": false,
    "TestDataPath": "%LocalAppData%\\UniGetUI\\Test\\TestData"
  },
  "Backup": {
    "Enabled": false,
    "AutoBackup": false
  },
  "Telemetry": {
    "Enabled": false
  }
}
