{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "AppSettings": {
    "DataDirectory": "%LocalAppData%\\UniGetUI\\Dev",
    "EnableTelemetry": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Information"
    },
    "Console": {
      "Enabled": true,
      "IncludeScopes": true
    },
    "File": {
      "RetentionDays": 7
    }
  },
  "Features": {
    "ExperimentalFeatures": true,
    "EnableAutoUpdates": false,
    "EnableBackgroundOperations": false
  },
  "PackageManagers": {
    "WinGet": {
      "TimeoutSeconds": 120
    },
    "Chocolatey": {
      "TimeoutSeconds": 120
    }
  },
  "Security": {
    "AllowCLIArguments": true,
    "AllowImportingCLIArguments": true,
    "AllowPrePostOpCommand": true,
    "VerifyPackageSignatures": false
  },
  "Performance": {
    "MaxConcurrentOperations": 1,
    "CacheEnabled": false,
    "PreloadPackageLists": false
  },
  "UI": {
    "CheckForUpdatesOnStartup": false,
    "AnimationsEnabled": false
  },
  "Backup": {
    "Enabled": false,
    "AutoBackup": false
  },
  "Telemetry": {
    "Enabled": false,
    "CollectUsageData": false,
    "CollectErrorReports": false
  }
}
