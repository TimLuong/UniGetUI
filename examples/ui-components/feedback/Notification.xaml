<!-- Toast Notification Example -->
<!-- Follows UniGetUI Design System specification for Notifications -->
<!-- See: /docs/ui-ux/component-specifications.md#notifications-toast -->

<!-- Success Notification -->
<Grid x:Name="SuccessToast"
      Width="360"
      MinHeight="64"
      Background="{ThemeResource SystemFillColorSolidBackgroundBase}"
      BorderBrush="{ThemeResource SystemSuccessColor}"
      BorderThickness="1,1,1,3"
      CornerRadius="8"
      Padding="16"
      Shadow="{StaticResource NotificationShadow}">
    
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    
    <!-- Success Icon -->
    <FontIcon Grid.Column="0"
              FontFamily="Segoe Fluent Icons"
              Glyph="&#xE73E;"
              FontSize="20"
              Foreground="{ThemeResource SystemSuccessColor}"
              VerticalAlignment="Top"
              Margin="0,2,12,0"/>
    
    <!-- Content -->
    <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center">
        <TextBlock Text="Changes Saved"
                   FontWeight="SemiBold"
                   Style="{StaticResource BodyStrongTextBlockStyle}"/>
        <TextBlock Text="Your document has been saved successfully."
                   Style="{StaticResource CaptionTextBlockStyle}"
                   Foreground="{ThemeResource TextSecondaryBrush}"
                   TextWrapping="Wrap"/>
    </StackPanel>
    
    <!-- Close Button -->
    <Button Grid.Column="2"
            Width="24"
            Height="24"
            Padding="0"
            Background="Transparent"
            BorderThickness="0"
            VerticalAlignment="Top"
            Click="OnCloseNotification">
        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE711;" FontSize="12"/>
        <AutomationProperties.Name>Close notification</AutomationProperties.Name>
    </Button>
    
    <AutomationProperties.Name>Success notification: Changes Saved</AutomationProperties.Name>
    <AutomationProperties.LiveSetting>Polite</AutomationProperties.LiveSetting>
</Grid>

<!-- Error Notification -->
<Grid x:Name="ErrorToast"
      Width="360"
      MinHeight="64"
      Background="{ThemeResource SystemFillColorSolidBackgroundBase}"
      BorderBrush="{ThemeResource SystemErrorTextColor}"
      BorderThickness="1,1,1,3"
      CornerRadius="8"
      Padding="16"
      Margin="0,8,0,0"
      Shadow="{StaticResource NotificationShadow}">
    
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    
    <!-- Error Icon -->
    <FontIcon Grid.Column="0"
              FontFamily="Segoe Fluent Icons"
              Glyph="&#xE783;"
              FontSize="20"
              Foreground="{ThemeResource SystemErrorTextColor}"
              VerticalAlignment="Top"
              Margin="0,2,12,0"/>
    
    <!-- Content with Action -->
    <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Center">
        <StackPanel Spacing="4">
            <TextBlock Text="Connection Failed"
                       FontWeight="SemiBold"
                       Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock Text="Unable to connect to the server. Please check your internet connection."
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextSecondaryBrush}"
                       TextWrapping="Wrap"/>
        </StackPanel>
        
        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <HyperlinkButton Content="Retry"
                             Padding="4,0"
                             Click="OnRetryConnection">
                <AutomationProperties.Name>Retry connection</AutomationProperties.Name>
            </HyperlinkButton>
            <HyperlinkButton Content="View Details"
                             Padding="4,0"
                             Click="OnViewDetails">
                <AutomationProperties.Name>View error details</AutomationProperties.Name>
            </HyperlinkButton>
        </StackPanel>
    </StackPanel>
    
    <!-- Close Button -->
    <Button Grid.Column="2"
            Width="24"
            Height="24"
            Padding="0"
            Background="Transparent"
            BorderThickness="0"
            VerticalAlignment="Top"
            Click="OnCloseNotification">
        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE711;" FontSize="12"/>
        <AutomationProperties.Name>Close notification</AutomationProperties.Name>
    </Button>
    
    <AutomationProperties.Name>Error notification: Connection Failed</AutomationProperties.Name>
    <AutomationProperties.LiveSetting>Assertive</AutomationProperties.LiveSetting>
</Grid>

